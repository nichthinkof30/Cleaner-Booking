<%= form_for(@cleaner) do |f| %>
  <% if @cleaner.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@cleaner.errors.count, "error") %> prohibited this cleaner from being saved:</h2>

      <ul>
      <% @cleaner.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %>
  </div>

  <% if @cities.present? %>
    <% @cities.each do |city| %>
      <div class="field">
        <%= f.check_box :city_list, { multiple: true, checked: cities_checked?(f.object.working_cities_id, city.id) }, city.id.to_s, '' %>
        <%= city.name %>
      </div>
    <% end %>
  <% end %>

  <div class="field">
    <%= f.label :quality_score %><br>
    <%= f.text_field :quality_score %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
